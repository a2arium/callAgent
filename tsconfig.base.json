{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@a2arium/core": ["packages/core/src"],
      "@a2arium/types": ["packages/types/src"],
      "@a2arium/memory-sql": ["packages/memory-sql/src"]
    }
  }
} 