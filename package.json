{
  "name": "ai-agents-framework-minimal",
  "version": "0.1.0",
  "description": "Minimal AI Agents Framework Core",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/runner/index.js",
    "dev": "node --loader ts-node/esm src/runner/index.ts",
    "agent": "yarn dev examples/hello-agent/AgentModule.ts '{\"name\":\"Developer\"}'",
    "llm-agent": "yarn dev examples/llm-agent/AgentModule.ts '{\"query\":\"Tell me a random joke about ai?\"}'",
    "test": "jest",
    "test:llm": "node --loader ts-node/esm examples/llm-test/test-llm.ts"
  },
  "keywords": [
    "ai",
    "agent",
    "framework"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.14.1",
    "typescript": "^5.8.3",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "callllm": "1.0.2"
  }
}
