{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@a2arium/core": ["packages/core/src"],
      "@a2arium/types": ["packages/types/src"],
      "@a2arium/memory-sql": ["packages/memory-sql/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
} 